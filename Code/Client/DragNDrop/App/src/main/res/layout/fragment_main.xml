<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_room_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zenit.dragndrop.MainActivity$PlaceholderFragment"
    android:focusable="true">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dropImage"
        android:layout_below="@+id/section_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_room" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dragImageOne"
    android:layout_below="@+id/section_label"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="86dp"
    android:focusableInTouchMode="false"
    android:src="@drawable/ic_lightbulb" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dragImageTwo"
        android:layout_below="@+id/section_label"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_lightbulb" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dragImageThree"
        android:layout_below="@+id/section_label"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="130dp"
        android:focusableInTouchMode="false"
        android:src="@drawable/ic_lightbulb" />
</RelativeLayout>
